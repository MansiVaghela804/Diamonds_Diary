<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diamonds1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="360dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="318dp"
                android:layout_height="67dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="50sp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="29sp"
                    android:layout_marginStart="29sp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/textHomeDeocr"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="6sp"
                    android:layout_marginStart="6sp"
                    android:layout_marginTop="12sp"
                    android:text="હીરા ડાયરી"
                    android:textColor="@color/Name"
                    android:textSize="36sp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="11sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/email"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="29sp"
                    android:layout_marginStart="29sp"
                    android:src="@drawable/ic_phone_black_24dp" />

                <EditText
                    android:id="@+id/textemail"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginStart="20sp"
                    android:hint="ફોન નંબર"
                    android:textColorHint="@color/OffWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/password"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="29sp"
                    android:layout_marginStart="29sp"
                    android:src="@drawable/ic_lock_black_24dp" />

                <EditText
                    android:id="@+id/textpassword"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginStart="20sp"
                    android:hint="પાસવર્ડ"
                    android:textColorHint="@color/OffWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginStart="50sp"
                android:layout_marginTop="26sp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/signin"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65sp"
                    android:layout_marginStart="65sp"
                    android:background="@drawable/button"
                    android:text="પ્રવેશ કરો"
                    android:textColor="@color/White"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/noregister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="હજુ સુધી કોઈ ખાતું નથી?"
                        android:textColor="@color/Black"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4sp"
                        android:layout_marginStart="4sp"
                        android:text="નવું ખાતું બનાવો"
                        android:textColor="@color/Black"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>